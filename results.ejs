<%- include("partials/header") %>

<h3 class="text-center">Results:</h3>

<% data["Search"].forEach(function(movie){ %><!--for every movie in the Search array from the MOVIE API...-->
   <div class="container col-lg-6">     
        <ul class="list-group list-group-item-text">
                <li class="list-group-item  list-group-item-wrapper">
                    <strong><%= movie["Title"] %></strong> - <span><%= movie["Year"] %> -</span> <a href="<%= movie['Poster'] %>">Poster</a><!--Display the movie,title,year and poster-->
                </li>
        </ul>
    </div>
<% }) %>
<br>
<h4 class="text-center"><a href="/">Search Again</a></h4>

